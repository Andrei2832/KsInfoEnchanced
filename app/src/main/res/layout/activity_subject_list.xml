<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    android:background="@color/KsBlueDim">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menuHeader"
        android:orientation="horizontal"
        android:background="@color/KsWhite"
        android:elevation="6dp"
        >

        <ImageView android:id="@+id/menuHeaderImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ks54logo2"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:layout_gravity="left"
            android:layout_weight="0"/>

        <TextView android:id="@+id/menuHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/TextSubjectListHeader"
            android:textColor="@color/KsBlueDim"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/menuHeaderButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="?android:selectableItemBackground"
            android:paddingVertical="10dp"
            android:scaleType="fitCenter"

            android:src="@drawable/menuheaderbutton" />



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                card_view:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/KsLightBlue"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/KsWhite"
                        android:text="@string/SubjectPhilosophy"
                        android:textSize="24sp"
                        android:background="@color/KsBlue"
                        android:layout_marginBottom="3dp"
                        android:gravity="center" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="3dp"
                            android:src="@drawable/philosophyimg" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/KsBlue"
                            android:padding="10dp"
                            android:textSize="18sp"
                            android:maxLines="6"
                            android:ellipsize="end"
                            android:singleLine="false"

                            android:text="@string/PhilosophyInfo"
                            android:textColor="@color/KsWhite"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/SPhilosophyButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingHorizontal="15dp"
                        android:layout_margin="7dp"
                        android:text="@string/More"
                        android:textColor="@color/KsWhite"
                        android:background="@color/KsBlue"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                card_view:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/KsLightBlue"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/KsWhite"
                        android:text="@string/Subject0402ISP"
                        android:textSize="24sp"
                        android:background="@color/KsBlue"
                        android:layout_marginBottom="3dp"
                        android:gravity="center" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="3dp"
                            android:src="@drawable/s0402"
                             />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/KsBlue"
                            android:padding="10dp"
                            android:textSize="18sp"
                            android:maxLines="6"
                            android:ellipsize="end"
                            android:singleLine="false"

                            android:text="@string/S0402Info"
                            android:textColor="@color/KsWhite"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/S0402ISPButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingHorizontal="15dp"
                        android:layout_margin="7dp"
                        android:text="@string/More"
                        android:textColor="@color/KsWhite"
                        android:background="@color/KsBlue"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view2"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                card_view:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/KsLightBlue"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/KsWhite"
                        android:text="@string/Subject0103ISP"
                        android:textSize="24sp"
                        android:background="@color/KsBlue"
                        android:layout_marginBottom="3dp"
                        android:gravity="center" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="3dp"
                            android:src="@drawable/s0103" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/KsBlue"
                            android:padding="10dp"
                            android:textSize="18sp"
                            android:maxLines="6"
                            android:ellipsize="end"
                            android:singleLine="false"

                            android:text="@string/s0103Info"
                            android:textColor="@color/KsWhite"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/S0103Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingHorizontal="15dp"
                        android:layout_margin="7dp"
                        android:text="@string/More"
                        android:textColor="@color/KsWhite"
                        android:background="@color/KsBlue"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view4"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                card_view:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/KsLightBlue"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/KsWhite"
                        android:text="@string/Subject1101ISP"
                        android:textSize="24sp"
                        android:background="@color/KsBlue"
                        android:layout_marginBottom="3dp"
                        android:gravity="center" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="3dp"
                            android:src="@drawable/s1101" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/KsBlue"
                            android:padding="10dp"
                            android:textSize="18sp"
                            android:maxLines="6"
                            android:ellipsize="end"
                            android:singleLine="false"

                            android:text="@string/s1101Info"
                            android:textColor="@color/KsWhite"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/S1101Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingHorizontal="15dp"
                        android:layout_margin="7dp"
                        android:text="@string/More"
                        android:textColor="@color/KsWhite"
                        android:background="@color/KsBlue"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view5"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                card_view:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/KsLightBlue"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/KsWhite"
                        android:text="@string/SubjectBJ"
                        android:textSize="24sp"
                        android:background="@color/KsBlue"
                        android:layout_marginBottom="3dp"
                        android:gravity="center" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="3dp"
                            android:src="@drawable/sbj" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/KsBlue"
                            android:padding="10dp"
                            android:textSize="18sp"
                            android:maxLines="6"
                            android:ellipsize="end"
                            android:singleLine="false"

                            android:text="@string/sbjInfo"
                            android:textColor="@color/KsWhite"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/sbjButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingHorizontal="15dp"
                        android:layout_margin="7dp"
                        android:text="@string/More"
                        android:textColor="@color/KsWhite"
                        android:background="@color/KsBlue"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view6"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                card_view:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/KsLightBlue"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/KsWhite"
                        android:text="@string/Subject0101ISP"
                        android:textSize="24sp"
                        android:background="@color/KsBlue"
                        android:layout_marginBottom="3dp"
                        android:gravity="center" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="3dp"
                            android:src="@drawable/s0101" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/KsBlue"
                            android:padding="10dp"
                            android:textSize="18sp"
                            android:maxLines="6"
                            android:ellipsize="end"
                            android:singleLine="false"

                            android:text="@string/s0101Info"
                            android:textColor="@color/KsWhite"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/s0101Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingHorizontal="15dp"
                        android:layout_margin="7dp"
                        android:text="@string/More"
                        android:textColor="@color/KsWhite"
                        android:background="@color/KsBlue"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>






</RelativeLayout>